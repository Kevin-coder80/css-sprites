centered-around( w=@width )
    left: 50%;
    margin-left: -( w/2 )px;

centered-vertically( h=@height )
    top: 50%;
    margin-top: -( h/2 )px;

/*****************************************/
body
    width: 980px;
    margin: 0 auto;
    text-align: center;
    font-size: 12px;

.clearfix:after
    content: '.';
    height: 0;
    visibility: hidden;
    display: block;
    clear: both;

/*****************************************/
.main
    border: 1px solid #ccc;
    border-top: none;

    nav
        display: block;
        border-bottom: 1px solid #ccc;
        border-top: 1px solid #ccc;
        height: 40px;

    .fileCtrl
        float: left;
        width: 400px;
        min-height: 600px;
        border-right: 1px solid #ccc;

    .spritesPreview
        float: left;
        width: 570px;
        min-height: 600px;

/*****************************************/
.fileCtrl
    .updata-file
        background: #ddd;
        height: 100px;
        line-height: 100px;
        border: 1px dashed #333;
        font-size: 14px;

.fileCtrl
    .dir-ctrl
        position: relative;
        margin-top: 20px;
        margin-left: 20px;
        width: 86px;
        height: 86px;

        a,
        input
            position: absolute;
            display: block;

        a
            cursor: pointer;

       .num
            width: 20px;
            height: 18px;
            line-height: 20px;
            centered-around( 26 );
            centered-vertically( 26 );

        .top
            background: url( ../imgs/icons/top.png ) no-repeat;
            width: 21px;
            height: 13px;
            top: 0;
            centered-around();

        .right
            background: url( ../imgs/icons/right.png ) no-repeat;
            width: 13px;
            height: 21px;
            right: 0;
            centered-vertically();

        .bottom
            background: url( ../imgs/icons/bottom.png ) no-repeat;
            width: 21px;
            height: 13px;
            bottom: 0;
            centered-around();

        .left
            background: url( ../imgs/icons/left.png ) no-repeat;
            width: 13px;
            height: 21px;
            left: 0;
            centered-vertically();

.spritesPreview
    .canvas-border
        background: url( ../imgs/icons/grid.gif ) repeat;
        width: 500px;
        height: 550px;
        margin: 25px 40px;
        border: 1px dashed #99cc33;
