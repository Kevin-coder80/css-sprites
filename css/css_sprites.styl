centered-around( w=@width )
    width: 25px;
    height: 20px;
    left: 50%;
    margin-left: -( w/2 )px;

centered-vertically( h=@height )
    width: 25px;
    height: 20px;
    top: 50%;
    margin-top: -( h/2 )px;

/*****************************************/
body
    width: 980px;
    margin: 0 auto;
    text-align: center;
    font-size: 12px;

.clearfix:after
    content: '.';
    height: 0;
    visibility: hidden;
    display: block;
    clear: both;

/*****************************************/
.main
    border: 1px solid #ccc;
    border-top: none;

    nav
        display: block;
        border-bottom: 1px solid #ccc;
        border-top: 1px solid #ccc;
        height: 40px;

    .fileCtrl
        float: left;
        width: 400px;
        min-height: 600px;
        border-right: 1px solid #ccc;

    .spritesPreview
        float: left;
        width: 570px;
        min-height: 600px;

/*****************************************/
.fileCtrl
    .updata-file
        background: #ddd;
        height: 100px;
        line-height: 100px;
        border: 1px dashed #333;
        font-size: 14px;

.fileCtrl
    .dir-ctrl
        position: relative;

        ul
            margin: 0;
            padding: 0;

        input
            position: absolute;
            display: block;
            text-align: center;

       .num
            width: 20px;
            height: 18px;
            line-height: 20px;
            centered-around( 26 );
            centered-vertically( 26 );

.fileCtrl
    .title
        li
            list-style: none;
            float: left;
            width: 159px;
            height: 40px;
            line-height 40px;
            font-size: 18px;
            text-align: center;
            border-bottom: 1px dashed #ccc;

        li:first-child
            width: 80px;

        li:nth-child( even )
            border-left: 1px dashed #ccc;
            border-right: 1px dashed #ccc;

    .list
        li
            list-style: none;

        span
            float: left;
            width: 159px;
            height: 80px;
            border-bottom: 1px dashed #ccc;

        span:first-child
            width: 80px;
            line-height: 100px;

        span:nth-child( even )
            position: relative;
            border-left: 1px dashed #ccc;
            border-right: 1px dashed #ccc;

        .top
            centered-around();

        .right
            right: 0;
            centered-vertically();

        .bottom
            bottom: 0;
            centered-around();

        .left
            centered-vertically();

        .spanBG
            background: #9933cc;

.spritesPreview
    .canvas-border
        background: url( ../imgs/icons/grid.gif ) repeat;
        width: 500px;
        height: 550px;
        margin: 25px 40px;
        border: 1px dashed #99cc33;
